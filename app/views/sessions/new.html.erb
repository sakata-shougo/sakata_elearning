<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center">Sign in</h1>

        <%= form_for :session, url: signin_path do |f| %>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control mb-2" %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control mb-2" %>
            </div>

            <%= f.submit "Log in", class: "btn btn-success btn-block" %>
        <% end %>
    </div>
</div>