<div class="container">
    <div class="row mt-4">
    <div class="col-sm-4">
        
         <div class="card">　<!--card化をして要素をまとめた-->
            <div class="card-header">
                User Info
            </div>
            <div class="card-body text-center">
                <h1><%= current_user.name %></h1>
                <%= user_avatar(current_user,"img-size")%>　<!--user_avatarの引数に@userを入れる-->
              <div class="row mt-12"> <!--rowの中にcolが格納されている。-->
                <div class="col-sm-6"> <!--smはsmallの略称-->
                 <a href="#">
			      <strong><%= link_to current_user.active_relationships.count, "#" %></strong> 
			     </a>
                  <div>followers</div>
                </div>	

                <div class="col-sm-6">
		         <a href="#">
			      <strong>  <strong><%= link_to current_user.passive_relationships.count, "#" %></strong> </strong> 
			     </a>
                  <div>following</div>	
                </div>
               </div>
            </div> 
        </div>
    </div>

	<div class="col-sm-8">　<!--card化をして要素をまとめた-->
        <div class="card">
            <div class="card-header">
                Activity Feed
            </div>
            <div class="card-body">
                <hr>
            </div>
        </div>       
	</div>
    </div>
</div> 