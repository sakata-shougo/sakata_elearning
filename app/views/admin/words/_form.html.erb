<%= form_for [:admin, @category, @word] do |f| %>
   <%= render 'shared/error-message', object: @word %>
   <div clsaa="form-group">
     <%=f.label :content,"word"%>
     <%=f.text_field :content, class: "form-control" %>
     <br><hr>
   </div>

   <div class="form-group">
      <% label_tag"Choices"%>
      <%= f.fields_for :choices do |choice|%>
         <%= choice.text_field :content,class:"form-control"%>
         <%= choice.check_box :correct,class: "d-inline"%>
         <p class="d-inline">This is the correct answer!</p>
      <%end%>
   </div>
   <%= f.submit msg,class:"btn btn-primary"  %>
<%end%>
